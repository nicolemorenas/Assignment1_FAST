@model Assignment1_FAST.Models.AllEquipment
@{
    ViewData["Title"] = "All Equipment";
}

<div>
    

    <div class="text-center p-2">
        <h2 class="text-center">
            Here is the list of All Equipment
        </h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr><th>Id</th><th>Type</th><th>Description</th><th>Availability</th></tr>
            </thead>
            <tbody>
                @foreach (var equipment in Model.EquipmentList)
                {
                    <tr>
                        <td>@equipment.Id</td>
                        <td>@equipment.Type</td>
                        <td>@equipment.Description</td>
                        <td>@(equipment.IsAvailable ? "Available" : "Unavailable")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
